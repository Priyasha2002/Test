@model LoanApplicationSystem.Models.LoanApplication

@{
    Layout = null;
    ViewBag.Title = "Corporate Loan Application";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color: #eaf4fb;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h3 class="mb-0">Corporate Loan Application</h3>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Apply", "Loan", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                @Html.LabelFor(m => m.CompanyName, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                @Html.Label("BusinessType", "Business Type", new { @class = "form-label" })
                                @Html.DropDownList("BusinessType", new SelectList(new[] { "Pvt Ltd", "LLP", "Partnership", "Proprietorship" }), "Select", new { @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                @Html.Label("RegistrationNo", "Business Registration No.", new { @class = "form-label" })
                                @Html.TextBox("RegistrationNo", null, new { @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                @Html.Label("GSTIN", "GSTIN (optional)", new { @class = "form-label" })
                                @Html.TextBox("GSTIN", null, new { @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                @Html.Label("Industry", "Industry Sector", new { @class = "form-label" })
                                @Html.DropDownList("Industry", new SelectList(new[] { "Manufacturing", "IT", "Logistics", "Retail", "Finance", "Healthcare" }), "Select", new { @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                @Html.Label("YearsInOperation", "Years in Operation", new { @class = "form-label" })
                                @Html.TextBox("YearsInOperation", null, new { @class = "form-control", type = "number", min = "0" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.LoanAmount, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.LoanAmount, new { @class = "form-control", placeholder = "Amount in INR" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.LoanPurpose, new { @class = "form-label" })
                                @Html.TextAreaFor(m => m.LoanPurpose, new { @class = "form-control", rows = 3 })
                            </div>

                            <div class="mb-3">
                                @Html.Label("Turnover", "Annual Turnover (INR)", new { @class = "form-label" })
                                @Html.TextBox("Turnover", null, new { @class = "form-control", type = "number" })
                            </div>

                            <div class="mb-3">
                                @Html.Label("NetProfit", "Net Profit (INR)", new { @class = "form-label" })
                                @Html.TextBox("NetProfit", null, new { @class = "form-control", type = "number" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.ExistingDebt, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.ExistingDebt, new { @class = "form-control", placeholder = "Total liabilities" })
                            </div>

                            <div class="mb-3">
                                @Html.Label("Collateral", "Collateral Offered (optional)", new { @class = "form-label" })
                                @Html.TextArea("Collateral", null, new { @class = "form-control", rows = 2 })
                            </div>

                            <div class="mb-3">
                                @Html.Label("uploadDocument", "Upload Financial Statements (PDF/DOC)", new { @class = "form-label" })
                                <input type="file" name="uploadDocument" class="form-control" />
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Submit Application</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>